{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'layout_security.html.twig' %}

{% block title %}Page not found{% endblock %}

{% block body %}
    <h1>Page not found</h1>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-12">
          <div class="clearfix">
            <h1 class="float-left display-3 mr-4">404</h1>
            <h4 class="pt-3">Oops! You're lost.</h4>
            <p class="text-muted">The page you are looking for was not found. Checkout for any URL
        misspelling or <a href="{{ path('app_home') }}">return to the homepage</a>.</p>
          </div>
          <div class="input-prepend input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fa fa-search"></i>
              </span>
            </div>
            <input class="form-control" id="prependedInput" size="16" type="text" placeholder="What are you looking for?">
            <span class="input-group-append">
              <button class="btn btn-info" type="button">Search</button>
            </span>
          </div>
        </div>
      </div>
    </div>
{% endblock %}