{# templates/security/login.html.twig #}

{% extends 'layout_security.html.twig' %}

{% block body %}
<div class="card-group">
    <div class="card p-4">
        <div class="card-body">
        <h1>Login</h1>
        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                <div class="alert alert-{{ label }}">
                    {{ flash }}
                </div>
            {% endfor %}
        {% endfor %}
        <p class="text-muted">Sign In to your account</p>
        <form action="{{ path('app_login') }}" method="post" role="form">
            {{ form_row(form._token) }}
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="icon-user"></i>
                </span>
                </div>
                <input  type="text" class="form-control" id="username" name="{{ form.email.vars.full_name }}" value="{{ last_username }}" required="required" placeholder="Email">
            </div>
            <div class="input-group mb-4">
                <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="icon-lock"></i>
                </span>
                </div>
                <input type="password" class="form-control" id="password" name="{{ form.password.vars.full_name }}" required="required" placeholder="Password">
            </div>
            <div class="row">
                <div class="col-6">
                <button class="btn btn-primary px-4" type="submit">Login</button>
                </div>
                <div class="col-6 text-right">
                <a  href="{{ path('app_forgotten_password') }}" class="btn btn-link px-0">Forgotten password</a>
                </div>
            </div>
        </form>
        </div>
    </div>
    <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
        <div class="card-body text-center">
        <div>
            <h2>Sign up</h2>
            <p>Create your account today and enjoy free courses on yoscou</p>
            <a  href="{{ path('app_register') }}" class="btn btn-primary active mt-3">Register Now!</a>
        </div>
        </div>
    </div>
</div>
{% endblock %}